<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/msgBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/msgbox1" />

    <ImageView
        android:id="@+id/msgBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/msgbox2" />

    <TextView
        android:id="@+id/txt_juicio_caption"
        android:layout_width="213dp"
        android:layout_height="143dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="64dp"
        android:background="@color/cardview_shadow_end_color"
        android:fontFamily="@font/abel"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_juicio_refuta"
        android:layout_width="213dp"
        android:layout_height="143dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="272dp"
        android:background="@color/cardview_shadow_end_color"
        android:fontFamily="@font/abel"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_caso1_continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Continuar"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:backgroundTint="#39FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msgBox1" />

    <Button
        android:id="@+id/btn_favor_juicio"
        android:layout_width="205dp"
        android:layout_height="99dp"
        android:fontFamily="cursive"
        android:text="A favor"
        android:textSize="24sp"
        android:visibility="invisible"
        app:backgroundTint="#F7D917"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_contra_juicio"
        android:layout_width="205dp"
        android:layout_height="99dp"
        android:fontFamily="cursive"
        android:text="En contra"
        android:textSize="24sp"
        android:visibility="invisible"
        app:backgroundTint="#1905A0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_finalizar"
        android:layout_width="205dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/abel"
        android:text="Finalizar"
        android:textSize="24sp"
        android:visibility="invisible"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:fontFamily="cursive"
        android:text="Postura"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_contra_juicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_juicio_caption"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>